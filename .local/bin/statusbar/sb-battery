#!/bin/sh

# no sb-battery for linux :(
[ "$(uname)" != "OpenBSD" ] && exit
charger="$(apm -a)"
batteryp="$(apm -l)"
batterys="$(apm -b)"
if [ "$charger" = "1" ] && [ "$batterys" != "4" ]; then
	battery="Charging ($batteryp)"
elif [ "$batterys" = "4" ]; then
	battery="No Battery"
else
	battery="%$batteryp"
fi
echo "$battery"
